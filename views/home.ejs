            <%}else{%>
        <h3>All Posts-:</h3>
        <%}%>
        <ul>
        <%-include('_post')-%>
        </ul>
    </section>
    <section id="friends">
        <%if(locals.user){%>
            <h2>All Registered Users-:</h2>
        <%for(user of all_user){%>
            <p><a href="/users/profile/<%=user._id%>"><%=user.name%></a></p>
            <%}%>
        <%}%>
    </section>
</div>
